<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <staticContent>
            <mimeMap fileExtension=".air" mimeType="application/vnd.adobe.air-application-installer-package+zip" />
        </staticContent>
        <rewrite>
            <rules>

                <rule name="HTTP" stopProcessing="true">
                    <match url=".*" />

                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="^POST$" negate="true" />
                    </conditions>

                    <action type="Redirect" url="addressbook.local/" />
                </rule>
                
                
                <rule name="Redirect To List Or Pdf" stopProcessing="true">
                    <match url="^(display|pdfDownload)$" />
                    <conditions>
                        <add input="{HTTP_HOST}" pattern="addressbook\.local" />
                    </conditions>
                    <action type="Redirect" url="?action={R:1}" />
                </rule>

                <rule name="Redirect To Login or Register" stopProcessing="true">
                    <match url="^(login|register)$" />

                    <conditions>
                        <add input="{HTTP_HOST}" pattern="addressbook\.local" />
                    </conditions>
                    <action type="Redirect" url="?action={R:1}" />
                </rule>
                <rule name="Rewrite for index" stopProcessing="true">
                    <match url="^index$" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.cfm" />
                </rule>
                <rule name="Redirect for register" stopProcessing="true">
                    <match url="^views/register\.cfm$" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="^POST$" negate="true" />
                    </conditions>
                    <action type="Redirect" url="views/register" appendQueryString="false" />
                </rule>
                <rule name="Rewrite for register" stopProcessing="true">
                    <match url="^views/register$" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <action type="Redirect" url="?action=error" appendQueryString="false" />

                </rule>
                <rule name="Redirect for error" stopProcessing="true">
                    <match url="^views/errorPage\.cfm$" />
                    <conditions>
                        <add input="{REQUEST_METHOD}" pattern="^POST$" negate="true" />
                    </conditions>
                    <action type="Redirect" url="views/errorPage" appendQueryString="false" />
                </rule>
                <rule name="Rewrite for error" stopProcessing="true">
                    <match url="^views/errorPage$" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="views/errorPage.cfm" />
                </rule>
            </rules>
            <outboundRules>
                <rule name="Outbound Rewrite for display" preCondition="Response">
                    <match filterByTags="A, Form, Img" pattern="^(.*)views/display\.cfm$" />
                    <action type="Rewrite" value="{R:1}/views/display" />
                </rule>
                <rule name="Outbound Rewrite for pdf" preCondition="Response">
                    <match filterByTags="A, Form, Img" pattern="^(.*)views/pdfDownload\.cfm$" />
                    <action type="Rewrite" value="{R:1}/views/pdfDownload" />
                </rule>
                <rule name="Outbound Rewrite for index" preCondition="Response">
                    <match filterByTags="A, Form, Img" pattern="^(.*)index\.cfm$" />
                    <action type="Rewrite" value="{R:1}/ index" />
                </rule>
                <rule name="Outbound Rewrite for register" preCondition="Response">
                    <match filterByTags="A, Form, Img" pattern="^(.*)views/register\.cfm$" />
                    <action type="Rewrite" value="/views/register" />
                </rule>
                <rule name="Outbound Rewrite for error" preCondition="ResponseIsHtml1">
                    <match filterByTags="A, Form, Img" pattern="^(.*)views/errorPage\.cfm$" />
                    <action type="Rewrite" value="{R:1}/ views/errorPage" />
                </rule>
                <preConditions>
                    <preCondition name="Response">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html" />
                    </preCondition>
                    <preCondition name="ResponseIsHtml1">
                        <add input="{RESPONSE_CONTENT_TYPE}" pattern="^text/html" />
                    </preCondition>
                </preConditions>
            </outboundRules>
        </rewrite>
        <httpErrors errorMode="Custom">
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404" path="/views/errorPage.cfm" responseMode="ExecuteURL" />
        </httpErrors>
    </system.webServer>
</configuration>
